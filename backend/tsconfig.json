{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "target": "ESNext",
    "module": "commonjs",

    "baseUrl": "src",                                
    "paths": {
      "@adapters/*": ["adapters/*"],
      "@application/*": ["application/*"],
      "@frameworks/*": ["frameworks/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"],
    },                                                
           
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}